import { NgModule } from '@angular/core';
import { RouterModule, Routes } from '@angular/router';
import { LoginComponent } from './components/pages/login/login.component';
import { AuthGuard } from './core';
import { ErrorPageComponent } from './components/features/feature1/components/error-page/error-page.component';

const routes: Routes = [
  { path: 'login', component: LoginComponent },
  { path: 'error/:type', component: ErrorPageComponent },
  { path: 'motor',
   loadChildren :()=> import('./components/pages/protected.modulo')
   .then(module => module.ProtectedModule),
   canActivate: [AuthGuard] // Protege la ruta con el AuthGuard
  },
  { path: '**', redirectTo: 'login' }
];

@NgModule({
  imports: [RouterModule.forRoot(routes)],
  exports: [RouterModule]
})
export class AppRoutingModule { }
