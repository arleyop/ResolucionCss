@Bean(name = "goldenDataSource")
@ConfigurationProperties("spring.datasource.golden")
public HikariDataSource goldenDataSource() {
    return DataSourceBuilder.create()
        .type(HikariDataSource.class)
        .build();
}


@Primary
@Bean(name = "gemotorDataSource")
@ConfigurationProperties("spring.datasource.gemotor")
public HikariDataSource gemotorDataSource() {
    return DataSourceBuilder.create()
        .type(HikariDataSource.class)
        .build();
}





spring:
  datasource:
    gemotor:
      jdbc-url: jdbc:oracle:thin:@//oracle-host:1521/ORCL
      username: gemotor_user
      password: gemotor_password
      driver-class-name: oracle.jdbc.OracleDriver
      hikari:
        connection-timeout: 30000
        maximum-pool-size: 10

    golden:
      jdbc-url: jdbc:sqlserver://sqlserver-host:1433;databaseName=golden_db;encrypt=true;trustServerCertificate=true
      username: golden_user
      password: golden_password
      driver-class-name: com.microsoft.sqlserver.jdbc.SQLServerDriver
      hikari:
        connection-timeout: 30000
        maximum-pool-size: 10
