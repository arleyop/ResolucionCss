private Set<Long> getRolesQuePuedeAsignar(AppUser currentUser) {
	String rol = currentUser.getRole().getNombre();

	// Puedes cargar esto desde BD si lo deseas
	switch (rol) {
		case "Administradorusuarios":
			return Set.of(2L, 3L); // solo roles espec√≠ficos
		case "SuperAdmin":
			// Todos los roles posibles (ejemplo)
			return roleRepository.findAll().stream()
				.map(Role::getId_rol)
				.collect(Collectors.toSet());
		default:
			return Collections.emptySet();
	}
}
