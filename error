spring:
  datasource:
    # Oracle Configuration (Gemotor)
    gemotor:
      url: jdbc:oracle:thin:@//oracle-host:1521/ORCL
      username: gemotor_user
      password: gemotor_password
      driver-class-name: oracle.jdbc.OracleDriver
      hikari:
        connection-timeout: 30000
        maximum-pool-size: 10

    # SQL Server Configuration (Golden)
    golden:
      url: jdbc:sqlserver://sqlserver-host:1433;databaseName=golden_db;encrypt=true;trustServerCertificate=true
      username: golden_user
      password: golden_password
      driver-class-name: com.microsoft.sqlserver.jdbc.SQLServerDriver
      hikari:
        connection-timeout: 30000
        maximum-pool-size: 10

  jpa:
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        use_sql_comments: true

# Environment-specific settings
env:
  database:
    gemotor:
      hibernate:
        default_schema: GEMOTOR_SCHEMA
    golden:
      hibernate:
        default_schema: dbo  # SQL Server default schema
